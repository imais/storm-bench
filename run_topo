#!/bin/bash

JAR="./target/storm-bench-0.1-jar-with-dependencies.jar"
CONF="./conf/conf.yaml"
PACKAGE="rpi.storm.benchmark"

run_cmd() {
    local cmd=$1
    echo $cmd
    eval $cmd
}

case "$1" in
    rsort)
        echo "Submitting rollingsort"
        class=RollingSort
        topo=rollingsort
        ;;
    sol)
        echo "Submitting sol"
        class=SOL
        topo=sol
        ;;
    wc)
        echo "Submitting wordcount"
        class=WordCount
        topo=wordcount
        ;;
    clean)
        echo "Submitting dataclean"
        class=DataClean
        topo=dataclean
        ;;
    grep)
        echo "Submitting grep"
        class=Grep
        topo=grep
        ;;
    pv)
        echo "Submitting pageviewcount"        
        class=PageViewCount
        topo=pageviewcount
        ;;
    visitor)
        echo "Submitting uniquevisitor"
        class=UniqueVisitor
        topo=uniquevisitorp
        ;;
    trident)
        echo "Submitting trident"
        class=TridentWordCount
        topo=tridentwordcount
        ;;
    rcount)
        echo "Submitting rollingcount"
        class=RollingCount
        topo=rollingcount
        ;;
    *)
        echo "Usage: $0 {rsort|sol|wc|clean|grep|pv|visitor|trident|rcount}"
        exit 1
esac

run_cmd "storm jar ${JAR} ${PACKAGE}.${class} ${topo} -conf ${CONF}"
