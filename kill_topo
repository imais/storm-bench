#!/bin/bash

run_cmd() {
    local cmd=$1
    echo $cmd
    eval $cmd
}

case "$1" in
    sort)
        echo "Killing rollingsort"
        run_cmd "storm kill -w 0 rollingsort || true"
        ;;
    sol)
        echo "Killing sol"
        run_cmd "storm kill -w 0 sol || true"
        ;;
    wc)
        echo "Killing wordcount"
        run_cmd "storm kill -w 0 wordcount || true"
        ;;
    *)
        echo "Usage: $0 {sort|sol|wc}"
        exit 1
esac

